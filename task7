Module Module1



    Sub Main()
        Dim str1, str2 As String
        Dim char1, char2, char3 As Char
        Dim count As Integer
        str1 = ""
        str2 = ""
        char1 = ""
        char2 = ""
        char3 = ""
        count = 0
        Console.WriteLine("enter the string")
        str1 = Console.ReadLine
        Console.WriteLine("enter first two char")
        char2 = (Console.ReadLine)
        Console.WriteLine("enter last two char")
        char3 = (Console.ReadLine)
        For count = 1 To Len(str1)
            char1 = Mid(str1, count, 1)


            If char1 = char2 And char1 = char3 Then
                str2 = str2 & char2 & char3
            Else : str2 = char2 & char3

            End If
        Next





        Console.WriteLine("result of string:" & str2)
        Console.ReadKey()












    End Sub

End Module



